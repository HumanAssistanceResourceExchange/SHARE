<% unless current_user == @listing.creator %>
    <% if @listing.followed?(current_user) %>
        <%= button_to [ :unfollow, @listing ], {class: 'button small radius'} do %>
        <%= content_tag(:i, "", :class => "fa fa-eye-slash fa-lg") %>
        Un-Watch<% end %>
    <% else %>
        <%= link_to [ :follow, @listing ] do %>
        <%= content_tag(:i, "", :class => "fa fa-eye fa-lg") %>
        Watch<% end %>
    <% end %>
<% end %>

