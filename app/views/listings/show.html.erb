<%= render 'listings/tab_navigation' %>

<div class="tabs-content">
    <div class="content active" id="listings-item">
        <div class="row">
          <div class="large-4 columns">
            <img src="http://placehold.it/400x300&text=[img]">
          </div>
          <div class="large-8 columns">
            <h4><%= @listing.title %></h4>
            <p><%= @listing.description %></p>
            <p>Fair Market Value: <%= @listing.fair_market_value.to_i %> USD</p>
            <!-- "Watch" button is inside a partial file:
            listings/_follow.html.erb
            -->
            <%= render 'listings/follow' %>
            <!-- end Watch button-->
            <%= link_to "Back to Listings", session.delete(:listings_index) %>
            <!-- the below link_to code will compile into HTML like this:
            <a href="" class="button" id="requestbutton">Request Donation</a> -->
            <%= link_to "Request Donation", "", :class => "button", :id =>"requestbutton" %>
          </div>
        </div>
    </div>
    <!-- Do not edit the section below -->
    <!-- Begin Donation Application Status section displayed to Listing creators and Listing followers -->
    <!-- Partials located in app/views/donation_application_trackers/ -->
    <% if current_user && current_user == @listing.creator %>
    <%= render 'donation_application_trackers/show_as_creator' %>
    <% elsif current_user && @listing.followers.include?(current_user) %>
    <%= render 'donation_application_trackers/show_as_follower' %>
    <% end %>
    <!-- End Donation Application Status section -->
</div>

